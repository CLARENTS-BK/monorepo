{
    "compilerOptions": {
      "outDir": "dist",
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "noEmit": false,
      "jsx": "react-jsx",
      "declaration": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "types": ["node", "vite/client", "jest"],
      "paths": {
        "popup-library/*": ["packages/popup-library/src/*"]
      },
    },
    "include": [
      "apps/project1/src",
      "packages/popup-library/src"
    ]
  }